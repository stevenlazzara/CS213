<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>


<BorderPane fx:controller="application.PrimaryController" xmlns:fx="http://javafx.com/fxml/1" prefWidth="600" prefHeight="750">
	<top>
		<GridPane>
			<padding>
				<Insets left="50" top="25"/>
			</padding>
			<columnConstraints>
				<ColumnConstraints minWidth="10" prefWidth="300"/>
				<ColumnConstraints minWidth="50" prefWidth="300"/>
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10" prefHeight="30"/>
				<RowConstraints minHeight="10" prefHeight="30"/>
				<RowConstraints minHeight="10" prefHeight="30"/>
				<RowConstraints minHeight="10" prefHeight="30"/>
			</rowConstraints>
			<children>
				<Label text="Pizza" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
				<ComboBox fx:id="pizzaOptions" onAction="#chooseStyle" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
				<Label text="Size" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
				<ComboBox fx:id="sizeOptions" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
				<ImageView fx:id="pizzaImg" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
			</children>
		</GridPane>
	</top>
	
	<left>
		<VBox>
			<padding>
				<Insets top="40" right = "10" bottom="20" left="40"/>
			</padding>
			<children>
				<Label text="Toppings" alignment="CENTER">
					<padding><Insets left="25"/></padding>
				</Label>
				<ListView fx:id="toppingsOptions" prefWidth="100" prefHeight="252"/>
			</children>
		</VBox>
	</left>
	<center>
		<GridPane>
			<padding><Insets top="50" right="10" bottom="20" left="100"/></padding>
			<columnConstraints><ColumnConstraints minWidth="10" prefWidth="150"/></columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10" prefHeight="50"/>
				<RowConstraints minHeight="10" prefHeight="50"/>
				<RowConstraints minHeight="10" prefHeight="50"/>
				<RowConstraints minHeight="10" prefHeight="150"/>
				<RowConstraints minHeight="10" prefHeight="50"/>
				<RowConstraints minHeight="10" prefHeight="50"/>
				
			</rowConstraints>
			<children>
				<Button fx:id="addToppingsButton" onAction="#addToppings" text="Add topping(s)" prefWidth="125" GridPane.columnIndex ="0" GridPane.rowIndex="0"/>
				<Button fx:id="removeToppingsButton" onAction="#removeToppings" text="Remove topping(s)"  prefWidth="125" GridPane.columnIndex ="0" GridPane.rowIndex="1"/>
				<Button fx:id="clearButton" onAction="#clear" text="Clear selection" prefWidth="125" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
				<Button fx:id="addPizzaButton" onAction="#addPizza" text="Add to order" prefWidth="125" GridPane.columnIndex ="0" GridPane.rowIndex="4"/>
				<Button fx:id="showOrderButton" onAction="#showOrder" text="Show order" prefWidth="125" GridPane.columnIndex ="0" GridPane.rowIndex="5"/>
			</children>
		</GridPane>

	</center>
	<right>
		<VBox>
			<padding><Insets top="40" right="40" bottom="20"/></padding>
			<children>
				<Label text="Selected Toppings"/>
				<ListView fx:id="selectedToppings" prefWidth="100" prefHeight="252"/>
			</children>
		</VBox>
	</right>
	<bottom>
		<TextArea fx:id="messageDisplay" editable="false">
			<padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
		</TextArea>
		
	</bottom>
	<!-- TODO Add Nodes -->
</BorderPane>

